pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
               
                dir('SICEI') {
                   
                    sh 'npm install'
                    
                    sh 'docker build -t sicei-app .'
                }
            }
        }


        stage('Deploy') {
            steps {
                echo 'Deploying....'
                dir('SICEI') {
                   
                    sh 'docker run -d -p 3000:3000 sicei-app'
                }
            }
        }
    }
}
