pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Instalando dependencias y construyendo imagen Docker...'
                sh 'npm install'
                sh 'docker build -t sicei-app .'
            }
        }

        stage('Deploy') {
            steps {
                echo 'Desplegando contenedor...'
                // Detiene y elimina contenedor anterior si existe
                sh 'docker stop sicei-container || true'
                sh 'docker rm sicei-container || true'

                // Ejecuta nuevo contenedor en segundo plano
                sh 'docker run -d --name sicei-container -p 3000:3000 sicei-app'
            }
        }
    }
}
