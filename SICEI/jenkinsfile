pipeline {
    agent {
        docker {
            image 'alpine:latest'  // Imagen mínima con shell
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') {
            steps {
                dir('SICEI') {
                    script {
                        // Verifica que el shell funciona
                        sh 'echo "Shell está disponible!"'
                        sh 'npm install'
                    }
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('SICEI') {
                    sh 'docker build -t sicei-app .'
                }
            }
        }
    }
}